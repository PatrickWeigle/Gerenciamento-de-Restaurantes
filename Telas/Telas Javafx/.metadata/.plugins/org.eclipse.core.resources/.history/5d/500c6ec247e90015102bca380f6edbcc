	@Override
	public void initialize(URL location, ResourceBundle resources) {

		// initialize Pane
		assert pn_Fundo_Transparent != null : "fx:id=\"pn_Fundo_Transparent\" was not injected: check your FXML file 'Principal.fxml'.";
		assert pn_Fundo != null : "fx:id=\"pn_Fundo\" was not injected: check your FXML file 'Principal.fxml'.";
		assert pn_Troca_Telas != null : "fx:id=\"pn_Troca_Telas\" was not injected: check your FXML file 'Principal.fxml'.";
		assert pn_Detalhe_sup != null : "fx:id=\"pn_Detalhe_sup\" was not injected: check your FXML file 'Principal.fxml'.";
		assert pn_Detalhe_inf != null : "fx:id=\"pn_Detalhe_inf\" was not injected: check your FXML file 'Principal.fxml'.";
		// initialize Label
		assert lb_Fechar != null : "fx:id=\"lb_Fechar\" was not injected: check your FXML file 'Principal.fxml'.";
		assert lb_Minimizar != null : "fx:id=\"lb_Minimizar\" was not injected: check your FXML file 'Principal.fxml'.";
		// initialize Button
		assert bt_Inicio != null : "fx:id=\"bt_Inicio\" was not injected: check your FXML file 'Principal.fxml'.";
		assert bt_Clientes != null : "fx:id=\"bt_Clientes\" was not injected: check your FXML file 'Principal.fxml'.";
		assert bt_Funcionarios != null : "fx:id=\"bt_Funcionarios\" was not injected: check your FXML file 'Principal.fxml'.";
		assert bt_Fornecedores != null : "fx:id=\"bt_Fornecedores\" was not injected: check your FXML file 'Principal.fxml'.";
		assert bt_Produtos != null : "fx:id=\"bt_Produtos\" was not injected: check your FXML file 'Principal.fxml'.";
		assert bt_Mesas != null : "fx:id=\"bt_Mesas\" was not injected: check your FXML file 'Principal.fxml'.";
		assert bt_Relatorios != null : "fx:id=\"bt_Relatorios\" was not injected: check your FXML file 'Principal.fxml'.";
		botaoNaoSelecionado();
		
		bt_Inicio.setStyle("-fx-effect: dropshadow(two-pass-box , darkgray, 10, 0.0 , 4, 5);"+
				"-fx-background-color: linear-gradient(#E5D120,#EEDC42);"+
				"-fx-text-fill: white;"+
				"-fx-background-radius: 0;"+
				"-fx-border-radius: 0;"+
				"-fx-border-color: linear-gradient(#E5D120,#EEDC42);"+		
				"-fx-background-image: url(\"File:homIco2.png\");"+    
				"-fx-background-repeat: no-repeat;"+
				"-fx-background-position:20 14;"+ 
				"-fx-background-size:30 27;"); 

	}

