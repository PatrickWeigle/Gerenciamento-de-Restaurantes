public class ControllerPrincipal implements Initializable {
	@FXML
	private void bt_Inicio_Selected(ActionEvent event) throws IOException {

		botaoNaoSelecionado();
		pn_Troca_Telas.getChildren().clear();
		
		bt_Inicio.setStyle("-fx-effect: dropshadow(two-pass-box , darkgray, 10, 0.0 , 4, 5);"+
				"-fx-background-color: linear-gradient(#E5D120,#EEDC42);"+
				"-fx-text-fill: white;"+
				"-fx-background-radius: 0;"+
				"-fx-border-radius: 0;"+
				"-fx-border-color: linear-gradient(#E5D120,#EEDC42);"+		
				"-fx-background-image: url(\"File:homIco2.png\");"+    
				"-fx-background-repeat: no-repeat;"+
				"-fx-background-position:20 14;"+ 
				"-fx-background-size:30 27;"); 
	}

	@FXML
	private void bt_Clientes_Selected(ActionEvent event) throws IOException {

		botaoNaoSelecionado();
		pn_Troca_Telas.getChildren().clear();
		Pane root = FXMLLoader.load(getClass().getResource("Cliente.fxml"));
		pn_Troca_Telas.getChildren().addAll(root);
		
		bt_Clientes.setStyle("-fx-effect: dropshadow(two-pass-box , darkgray, 10, 0.0 , 4, 5);"+
		"-fx-background-color: linear-gradient(#E5D120,#EEDC42);"+
		"-fx-text-fill: white;"+
		"-fx-background-radius: 0;"+
		"-fx-border-radius: 0;"+
		"-fx-border-color: linear-gradient(#E5D120,#EEDC42);"+		
		"-fx-background-image: url(\"File:ClientesIco2.png\");"+    
		"-fx-background-repeat: no-repeat;"+
		"-fx-background-position:20 14;"+ 
		"-fx-background-size:30 27;"); 
	}
	

	@FXML
	private void bt_Fechar_Selected(MouseEvent event) throws IOException {		
	
		System.exit(0);
		
	}
	
	@FXML
	private void bt_Minimize_Selected(MouseEvent event) throws IOException {
		
		System.out.println("eoq");
	
		((Stage) lb_Minimizar.getScene().getWindow()).setIconified(true);
		
	}
	


